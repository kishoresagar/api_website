
<% if @tweets.present? %>
	<div class="container">
	  <div class="row">
		<div class="span9 centred">
			<table class="table table-striped">
				<tr>
					<th>tweet</th>
				</tr>
			        <% @tweets.each do |f| %>
				<tr>
					<td><%= f.text %></td>
				</tr>
			<% end %>
			</table>
		</div>
	    <p><%= link_to "Printable Invoice (PDF)", user_tweets_path(@tweets, :format => 'pdf') %></p>
	   </div>
	</div>
	<% else %>
		<h3> No Tweets Found</h3>
<% end %>